<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">

	<!-- Servlet definitions -->
	<servlet>
		<servlet-name>FrontPageServlet</servlet-name>
		<servlet-class>me.noos.worker.FrontPageServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>RecommendServlet</servlet-name>
		<servlet-class>me.noos.worker.RecommendServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CategoryServlet</servlet-name>
		<servlet-class>me.noos.worker.CategoryServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>RatingServlet</servlet-name>
		<servlet-class>me.noos.worker.RatingServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CommentServlet</servlet-name>
		<servlet-class>me.noos.worker.CommentServlet</servlet-class>
	</servlet>
	
	<!-- Servlet mappings -->
	<servlet-mapping>
		<servlet-name>FrontPageServlet</servlet-name>
		<url-pattern>/front</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RecommendServlet</servlet-name>
		<url-pattern>/recommend</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CategoryServlet</servlet-name>
		<url-pattern>/cat</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RatingServlet</servlet-name>
		<url-pattern>/rate</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CommentServlet</servlet-name>
		<url-pattern>/comment</url-pattern>
	</servlet-mapping>

	<!-- Welcome file -->
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

</web-app>
